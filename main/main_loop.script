-- main_loop
local pieces = { "pipes_one", "pipes_two" } 

function init(self) 
	self.speed = 180  -- Speed in pixels/s
end

function update(self, dt) 
	for i, p in ipairs(pieces) do 
		local pos = go.get_position(p)
		if pos.x <= -52 then 
			pos.x = 288 + (pos.x + 52)
		end
		pos.x = pos.x - self.speed * dt 
		go.set_position(pos, p) 
	end
end
